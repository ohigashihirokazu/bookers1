<h1>Edition Book</h1>
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <h4><%= f.submit 'Update Book' %></h4>

<h4><%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path(@book.id) %></h4> 

<% end %>